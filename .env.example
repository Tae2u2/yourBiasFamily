# Anthropic Claude API
# Get your API key from: https://console.anthropic.com/
# Cost: ~$0.001 per analysis (~1-2Ïõê)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe (Optional - for premium features)
# Get keys from: https://dashboard.stripe.com/
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google AdSense (Optional - for ad revenue)
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxx

# Google Analytics (Optional - for tracking)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Environment
NODE_ENV=development

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Rate Limiting (requests per hour per IP)
RATE_LIMIT_PER_HOUR=100

# Maximum file upload size (bytes)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/heic

# Cache duration (seconds)
CACHE_DURATION=300

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://choae-jokbo.com

# Database (if needed later)
# DATABASE_URL=postgresql://user:password@localhost:5432/choae_jokbo

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379

# Sentry (error tracking - optional)
# SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxx

# ===== Cost Optimization Settings =====

# Enable Claude API Prompt Caching (90% cost reduction)
ENABLE_PROMPT_CACHING=true

# Enable Batch API (50% cost reduction)
ENABLE_BATCH_API=false

# Max tokens for AI response (cost control)
MAX_AI_TOKENS=800

# Claude model to use (haiku-3 is cheapest)
CLAUDE_MODEL=claude-haiku-3-20240307

# ===== Feature Flags =====

# Enable premium features
ENABLE_PREMIUM=false

# Enable AI analysis
ENABLE_AI_ANALYSIS=true

# Enable ads
ENABLE_ADS=true

# Enable social sharing
ENABLE_SOCIAL_SHARE=true

# ===== Monitoring =====

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable cost tracking
ENABLE_COST_TRACKING=true
